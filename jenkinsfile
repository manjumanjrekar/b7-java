pipeline {
    agent any

    stages {
        stage('Build Image') {
            steps {
                script {
                    // Build Docker image
                    sh 'docker build -t tom12:2.0 -f Dockerfile .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Log in to Docker Hub
                    withDockerRegistry([credentialsId: 'manju256/Sonovision@2023', url: 'https://hub.docker.com/repository/docker/manju256/mmb7/general/']) {
                       sh "docker login -u ${manju256} -p ${Sonovision@2023}"
 
    // Push Docker image to Docker Hub
                        sh 'docker push tom12:2.0'
                    }
                }
            }
        }
    }
}

